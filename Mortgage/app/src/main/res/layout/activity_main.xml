<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="购房总价: "
                android:textSize="17sp"
                android:textColor="@color/black"
                />
            <EditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:maxLength="4"
                android:background="@drawable/edittext_selector"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textSize="17sp"
                android:layout_toRightOf="@+id/tv_price"
                android:hint="请输入购房总价（单位万）"
                android:layout_toLeftOf="@+id/tv_unit"
                android:gravity="right|center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_unit"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="  万"
                android:textColor="@color/black"
                android:textSize="17sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/tv_part"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="按揭部分: "
                android:textColor="@color/black"
                android:textSize="17sp"
                android:gravity="center"
                />
            <EditText
                android:id="@+id/et_loan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/tv_part"
                android:layout_toLeftOf="@+id/tv_percent"
                android:textSize="17sp"
                android:background="@drawable/edittext_selector"
                android:textColorHint="@color/grey"
                android:gravity="right|center"
                android:maxLength="2"
                android:inputType="number"

                android:hint="请输入按揭百分比"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:text="  ％"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:id="@+id/tv_percent"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btn_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计算贷款总额"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="其中贷款部分为：***万"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/rg_payment"
            android:orientation="horizontal"
            >


        </RadioGroup>
    </LinearLayout>
</ScrollView>

</LinearLayout>